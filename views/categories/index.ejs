<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css"> <!-- Link your CSS file -->
    <title>Categories</title>
</head>

<!-- Add and display new categories to the database -->
<body>
    <!-- Header with logo and navigation -->
    <header>
        <img class="logo" src="/namuenetecogo.png" alt="NamueneTec logo">
        <div class="heading">
            <h1 id="mainHeading">NamueneTec Inventory Management Categories</h1>
            <nav>
                <ul>
                  <li class="<%= activeTab === 'home' ? 'active' : '' %>"><a href="/">Home</a></li>
                  <li class="<%= activeTab === 'about' ? 'active' : '' %>"><a href="/about">About</a></li>
                  <li class="<%= activeTab === 'howto' ? 'active' : '' %>"><a href="/howto">HowTo</a></li>
                  <li class="<%= activeTab === 'categories' ? 'active' : '' %>"><a href="/categories">Categories</a></li>
                  <li class="<%= activeTab === 'items' ? 'active' : '' %>"><a href="/items">Items</a></li>
                </ul>
            </nav>              
    </header>

    <main>
        <!-- Display an error message if there is one -->
        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <a class="addCategory" href="/categories/new">Add New Category</a>

        <table>
            <thead>
                <tr>
                    <th class="categoryNameTitle">Category Name <span style="font-size: 15px; color: yellow;">(Click â¬‡ for items)</span></th>
                    <th>Description</th>
                    <th class="actionHeader">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td class="categoryName">
                            <!-- Link to the category's page -->
                            <a href="/categories/<%= category.id %>"><%= category.name %></a>
                        </td>
                        <td><%= category.description %></td>
                        <td class="actions">
                            <a href="/categories/<%= category.id %>/edit">Edit</a>
                            <% if (category.hasItems) { %>
                                <button disabled title="Delete all items before deleting this category.">Delete</button>
                            <% } else { %>
                                <form action="/categories/<%= category.id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                    <button type="submit">Delete</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <p><a href="#mainHeading">Back to top</a></p>

    </main>

    <!-- About the developer -->
    <footer>
        <p>&copy; 2024 NamueneTec</p>
        <p class="developer">Developed by Dr. Kato Samuel Namuene</p>
        <p class="email">Email: kato.namuene@ubuea.cm</p>
    </footer>
    
</body>
</html>
