<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css"> <!-- CSS file Link -->
    <title><%= category.name %> - Items</title>
</head>

<!-- Display all items in a category -->
<body>
    <!-- Header with logo and navigation -->
    <header>
        <img class="logo" src="/namuenetecogo.png" alt="NamueneTec logo">
        <div class="heading">
            <h1 id="mainHeading">NamueneTec Inventory Management Categories</h1>
            <nav>
                <ul>
                  <li class="<%= activeTab === 'home' ? 'active' : '' %>"><a href="/">Home</a></li>
                  <li class="<%= activeTab === 'about' ? 'active' : '' %>"><a href="/about">About</a></li>
                  <li class="<%= activeTab === 'howto' ? 'active' : '' %>"><a href="/howto">HowTo</a></li>
                  <li class="<%= activeTab === 'categories' ? 'active' : '' %>"><a href="/categories">Categories</a></li>
                  <li class="<%= activeTab === 'items' ? 'active' : '' %>"><a href="/items">Items</a></li>
                </ul>
            </nav>              
        </div>
    </header>

    <!-- Display all items in a category -->
    <main>
        <h2>Items in <%= category.name %></h2>
        <!--- If there are no items in the category, display a message. -->
        <% if (items.length === 0) { %>
            <p>No items found in this category.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(item => { %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><%= item.description %></td>
                            <td><%= item.quantity %></td>
                            <td><%= item.price %></td>
                            <td>
                                <a href="/items/<%= item.id %>/edit">Edit</a>
                                <form action="/items/<%= item.id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>

        <p><a href="/categories">Back to Categories</a></p>
    </main>

    <!-- About the developer -->
    <footer>
        <p>&copy; 2024 NamueneTec</p>
        <p class="developer">Developed by Dr. Kato Samuel Namuene</p>
        <p class="email">Email: kato.namuene@ubuea.cm</p>
    </footer>
</body>
</html>
