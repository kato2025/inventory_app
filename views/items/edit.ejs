<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css"> <!-- Link your CSS file -->
  <title>Edit Item</title>
</head>

<!-- Edit Item Form -->
<body>
  <!-- Header with logo and navigation -->
  <header>
    <img class="logo" src="/namuenetecogo.png" alt="NamueneTec logo">
    <div class="heading">
        <h1>Edit a NamueneTec Inventory Management Item</h1>
        <nav>
          <ul>
            <li class="<%= activeTab === 'home' ? 'active' : '' %>"><a href="/">Home</a></li>
            <li class="<%= activeTab === 'about' ? 'active' : '' %>"><a href="/about">About</a></li>
            <li class="<%= activeTab === 'howto' ? 'active' : '' %>"><a href="/howto">HowTo</a></li>
            <li class="<%= activeTab === 'categories' ? 'active' : '' %>"><a href="/categories">Categories</a></li>
            <li class="<%= activeTab === 'items' ? 'active' : '' %>"><a href="/items">Items</a></li>
          </ul>
        </nav>         
    </div>
  </header>
    <br>   
  <!-- Edit and update values in the Items form -->
    <form class="editForm" action="/items/<%= item.id %>?_method=PUT" method="POST">
        <br>
        <label for="name">Item Name:</label>
        <input type="text" id="name" name="name" value="<%= item.name %>" required>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" value="<%= item.description %>" required>

        <label for="category_id">Category:</label>
        <select id="category_id" name="categoryid" required>
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>" <%= item.categoryid === category.id ? 'selected' : '' %>><%= category.name %></option>
            <% }) %>
        </select>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= item.price %>" required>

        <button class="update" type="submit">Update Item</button>
        <br>

    </form>
      <br>
      <div class="back"> 
        <a href="/items">Back to Items</a>  
      <br>
      
  <!-- About the developer -->
